{
  "name": "timmy-task-automation",
  "version": "1.0.0",
  "description": "Timmy autonomous task automation system",
  "main": "dist/timmy.js",
  "scripts": {
    "init": "ts-node scripts/interactive-setup.ts",
    "settings": "ts-node scripts/settings.ts",
    "setup": "bash scripts/setup.sh",
    "build": "tsc",
    "start": "npm run build && node dist/timmy.js",
    "dev": "ts-node timmy.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "switch": "ts-node scripts/switch-project.ts",
    "projects": "ts-node scripts/list-projects.ts",
    "current": "ts-node scripts/current-project.ts"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "discord.js": "^14.24.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/types$": "<rootDir>/src/types",
      "^@/types/(.*)$": "<rootDir>/src/types/$1",
      "^@/shared/(.*)$": "<rootDir>/src/shared/$1",
      "^@/core/(.*)$": "<rootDir>/src/core/$1",
      "^@/infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
      "^@/config/(.*)$": "<rootDir>/src/config/$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/tmp/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/test-setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 30,
        "branches": 25,
        "functions": 30,
        "lines": 30
      }
    },
    "coverageReporters": [
      "text",
      "text-summary",
      "lcov",
      "json-summary"
    ]
  }
}
