# ============================================
# TIMMY - Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your actual values
# Run: npm run init (for interactive setup)
# ============================================

# ============================================
# GLOBAL CREDENTIALS (Used for all projects)
# ============================================

# ClickUp API Credentials
# Get your API key from: https://app.clickup.com/settings/apps
CLICKUP_API_KEY=pk_your_clickup_api_key_here
CLICKUP_SECRET=                              # Optional: OAuth secret
CLICKUP_BOT_USER_ID=12345678                 # Your ClickUp user ID (auto-detected during setup)

# GitHub Token
# Create token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:org
GITHUB_TOKEN=ghp_your_github_token_here

# OpenAI API Key (Optional - for RAG/embeddings context loading)
# Get your API key from: https://platform.openai.com/api-keys
# Only needed if using premium context mode with RAG
OPENAI_API_KEY=sk_your_openai_api_key_here

# Discord Bot (Optional - for monitoring Discord channels)
# Create bot at: https://discord.com/developers/applications
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_CHANNEL_IDS=channel_id_1,channel_id_2
DISCORD_KEYWORDS=bug,issue,error,problem,broken,crash,fix
DISCORD_POLL_INTERVAL_MS=600000              # Default: 10 minutes

# ============================================
# SYSTEM SETTINGS
# ============================================

# Polling interval (milliseconds)
POLL_INTERVAL_MS=15000                       # Default: 15 seconds

# CLI paths (auto-detected if not specified)
CLAUDE_CLI_PATH=claude                       # Path to Claude CLI
GEMINI_CLI_PATH=gemini                       # Path to Gemini CLI
CODEX_CLI_PATH=codex                         # Path to Codex CLI
QWEN_CLI_PATH=qwen                           # Path to Qwen CLI (optional)

# ============================================
# FEATURE FLAGS
# ============================================

# Disable all commenting (ClickUp and GitHub)
DISABLE_COMMENTS=false

# Auto-create GitHub repos when task specifies non-existent repo
AUTO_CREATE_REPO=true
AUTO_REPO_PRIVATE=true                       # Create private repos by default
AUTO_REPO_BASE_DIR=/Users/yourname/Documents/Personal-Projects
AUTO_REPO_DEFAULT_BRANCH=main

# ============================================
# CONTEXT LOADING CONFIGURATION
# ============================================

# Context mode: 'free' (Smart Loader), 'premium' (RAG), or 'hybrid' (both)
CONTEXT_MODE=hybrid                          # Default: hybrid

# Fallback to Smart Loader if RAG fails
CONTEXT_FALLBACK=true                        # Default: true

# Enable context caching
CONTEXT_CACHE_ENABLED=true                   # Default: true
CONTEXT_CACHE_TTL=3600                       # Cache TTL in seconds (default: 1 hour)

# ============================================
# PROJECT CONFIGURATION
# ============================================
# Project-specific settings are now managed in:
# - projects.json: All your projects with their ClickUp/GitHub configs
# - workspace.json: Currently active project
#
# Commands:
# - Switch projects: npm run switch <project-name>
# - List projects: npm run projects
# - Show current: npm run current
# - Modify settings: npm run settings
#
# Note: The following variables are DEPRECATED and only used
#       as fallback if no active project is configured:

CLICKUP_WORKSPACE_ID=12345678                # Deprecated: Use projects.json
GITHUB_OWNER=username                        # Deprecated: Use projects.json
GITHUB_REPO=repository-name                  # Deprecated: Use projects.json
GITHUB_REPO_PATH=/path/to/repo               # Deprecated: Use projects.json
GITHUB_BASE_BRANCH=main                      # Deprecated: Use projects.json

# ============================================
# OPTIONAL - ADVANCED SETTINGS
# ============================================

# Port for future web interface (not currently used)
PORT=8080

# GitHub default username (used for auto-repo creation)
GITHUB_DEFAULT_USERNAME=your_github_username
